{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "shared-node-browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "no-console": "off",
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-trailing-spaces": ["error", { "skipBlankLines": true, "ignoreComments": true }],
    "no-template-curly-in-string": "error",
    "no-unused-vars": "error",
    "no-useless-escape": "off",
    "no-eval": "error",
    "no-floating-decimal": "error",
    "no-implied-eval": "error",
    "no-invalid-this": "error",
    "no-labels": "error",
    "no-lone-blocks": "error",
    "no-octal-escape": "error",
    "no-return-assign": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-useless-return": "error",
    "no-void": "error",
    "no-with": "error",
    "init-declarations": "error",
    "no-shadow-restricted-names": "error",
    "no-unused-expressions": "error",
    "no-undef-init": "error",
    "no-path-concat": "error",
    "array-bracket-newline": ["error", "consistent"],
    "array-bracket-spacing": "error",
    "block-spacing": "error",
    "camelcase": "error",
    "comma-spacing": "error",
    "comma-style": "error",
    "computed-property-spacing": "error",
    "eol-last": "error",
    "func-call-spacing": "error",
    "implicit-arrow-linebreak": "error",
    "key-spacing": "error",
    "linebreak-style": "error",
    "no-array-constructor": "error",
    "no-bitwise": "error",
    "no-lonely-if": "error",
    "no-mixed-operators": "error",
    "no-multi-assign": "error",
    "no-negated-condition": "error",
    "no-new-object": "error",
    "no-tabs": "error",
    "semi-spacing": "error",
    "semi-style": "error",
    "space-before-blocks": "error",
    "space-in-parens": "error",
    "space-unary-ops": "error",
    "switch-colon-spacing": "error",
    "arrow-parens": ["error", "as-needed"],
    "space-before-function-paren": ["error", "never"],
    "no-unneeded-ternary": "error",
    "no-whitespace-before-property": "error",
    "operator-assignment": "error",
    "arrow-spacing": "error",
    "no-confusing-arrow": "error",
    "no-var": "error",
    "template-curly-spacing": "error",
    "operator-linebreak": ["error", "before"],
    "padded-blocks": ["error", "never"],
    "quote-props": ["error", "consistent"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "object-property-newline": ["error", { "allowAllPropertiesOnSameLine": true }],
    "object-curly-spacing": ["error", "never"],
    "object-curly-newline": ["error", { "consistent": true }],
    "nonblock-statement-body-position": ["error", "below"],
    "no-multiple-empty-lines": ["error", {"max": 2, "maxBOF": 0}],
    "multiline-ternary": ["error", "never"],
    "lines-around-comment": ["error", { "beforeBlockComment": true, "beforeLineComment": true, "allowBlockStart": true }],
    "keyword-spacing": ["error", { "before": false, "after": false, "overrides": { "const": { "after": true }, "try": { "after": true } } }],
    "arrow-body-style": ["error", "never"],
    "func-names": ["error", "never"],
    "function-paren-newline": ["error", "consistent"],
    "comma-dangle": ["error", "always-multiline"],
    "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
    "array-element-newline": ["error", { "multiline": true }],
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "wrap-iife": ["error", "inside"],
    "strict": ["error", "global"],
    "no-implicit-coercion": ["error", { "allow": ["!!"] }],
    "array-callback-return": "error",
    "block-scoped-var": "error",
    "consistent-return": "error",
    "default-case": "error",
    "eqeqeq": "error",
    "dot-location": ["error", "property"],
    "dot-notation": ["error", { "allowKeywords": false }],
    "curly": ["error", "multi-or-nest", "consistent"],
    "semi": "error"
    //see: https://eslint.org/docs/rules/
    //stopped at implicit-arrow-linebreak
  }
}